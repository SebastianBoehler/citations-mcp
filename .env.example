# OpenAI API Key for embeddings and LLM (required)
OPENAI_API_KEY=your_openai_api_key_here

# Path to your research papers folder (required)
PAPERS_DIRECTORY=/path/to/your/research/papers

# Vector database settings
VECTOR_DB_PATH=./vector_db
COLLECTION_NAME=research_papers

# Chunk settings for PDF processing
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Server settings
HOST=127.0.0.1
PORT=8000

# Embedding model
EMBEDDING_MODEL=text-embedding-3-small

# LLM model for query enhancement
LLM_MODEL=gpt-4o-mini
